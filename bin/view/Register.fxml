                </children>
            </AnchorPane>
        </left>
        <center>
            <AnchorPane prefHeight="400.0" prefWidth="332.0" style="-fx-background-color: #474747;" BorderPane.alignment="CENTER">
                <children>
                    <Label layoutX="26.0" layoutY="76.0" text="Username" textFill="WHITE" />
                    <TextField fx:id="usernameRegisterTextField" layoutX="96.0" layoutY="72.0" prefHeight="26.0" prefWidth="173.0" promptText="Username" />
                    <Label layoutX="26.0" layoutY="161.0" text="Password" textFill="WHITE" />
