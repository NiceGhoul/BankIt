                    <Label layoutX="26.0" layoutY="209.0" text="Password" textFill="WHITE" />
                    <PasswordField fx:id="confirmRegisterPasswordField" layoutX="95.0" layoutY="200.0" prefHeight="26.0" prefWidth="173.0" promptText="Password" />
                    <Label layoutX="29.0" layoutY="196.0" text="Confirm" textFill="WHITE" />
